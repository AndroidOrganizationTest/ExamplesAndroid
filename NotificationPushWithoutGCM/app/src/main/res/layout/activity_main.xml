<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hackro.tutorials.notificationpushwithoutgcm.MainActivity">

    <EditText
        android:id="@+id/tituloCorto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tituloCorto"
        android:maxLength="10"
        />


    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloCorto"
        android:hint="titulo"
        android:maxLength="10"
        />

    <EditText
        android:id="@+id/contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:maxLength="20"
        android:hint="contenido"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Notificacion"
        android:onClick="showNotification"
        android:layout_below="@+id/contenido"
        />
</RelativeLayout>
