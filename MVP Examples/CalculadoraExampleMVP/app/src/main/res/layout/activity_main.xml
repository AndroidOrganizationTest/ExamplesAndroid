<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Views.MainActivity">



    <EditText
        android:layout_width="wrap_content"
        android:hint="@string/number"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/number1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <EditText
        android:hint="@string/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/number2"
        android:layout_below="@+id/number1"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/operations"
        android:layout_below="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suma"
            android:onClick="suma"
            />


        <Button
            android:id="@+id/resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resta"
            android:onClick="resta"
            />


        <Button
            android:id="@+id/multiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplicacion"
            android:onClick="multiplicacion"
            />


        <Button
            android:id="@+id/divicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divicion"
            android:onClick="divicion"
            />


    </LinearLayout>

    <TextView
        android:hint="@string/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/result"
        android:layout_below="@+id/operations"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin" />


</RelativeLayout>
